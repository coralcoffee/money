{
  "name": "money",
  "version": "1.0.0",
  "private": true,
  "main": "dist/electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev:ui": "rsbuild dev -c ./renderer/rsbuild.config.ts --open=false",
    "dev:main": "cross-env NODE_ENV=development rsbuild build -c ./electron/rsbuild.main.config.ts --watch",
    "dev:preload": "cross-env NODE_ENV=development rsbuild build -c ./electron/rsbuild.preload.config.ts --watch",
    "dev:app": "wait-on tcp:3000 && electronmon dist/electron/main.cjs",
    "start": "concurrently -k -r \"npm run dev:ui\" \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:app\"",
    "build:renderer": "cross-env NODE_ENV=production rsbuild build -c ./renderer/rsbuild.config.ts",
    "build:main": "cross-env NODE_ENV=production rsbuild build -c ./electron/rsbuild.main.config.ts",
    "build:preload": "cross-env NODE_ENV=production rsbuild build -c ./electron/rsbuild.preload.config.ts",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.coralcoffee.money",
    "directories": {
      "buildResources": "static",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@rsbuild/core": "^1.5.10",
    "@rsbuild/plugin-react": "^1.4.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
