{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "electron"],
    "baseUrl": ".",
    "paths": {
      "@/renderer/*": ["src/renderer/*"]
    },
    "outDir": "dist"
  },
  "include": ["src"]
}
